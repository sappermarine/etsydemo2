<div class="jumbotron">
  <h1>Handcrafted Items From Around The World</h1>
  <h2>Discover One-of-a-kind Items</h2>
</div>

<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="center">
        <div class="thumbnail">
          <%= image_tag(listing.image.url) %><br>
          <div class="caption">
            <h3><%= listing.name %><br></h3>
            <p><%= number_to_currency(listing.price) %><br></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
          </div>
        </div>       
      </div>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to 'New listing', new_listing_path, class: 'btn btn-link' %>
<% end %>
